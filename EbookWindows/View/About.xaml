<UserControl x:Class="EbookWindows.Screen.About"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:materialDesignConverters="clr-namespace:MaterialDesignThemes.Wpf.Converters;assembly=MaterialDesignThemes.Wpf"
        xmlns:local="clr-namespace:EbookWindows.Screen"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"  VerticalAlignment="Center" HorizontalAlignment="Center">
    <Grid Name="MainGrid" Background="{DynamicResource MaterialDesignPaper}">

        <StackPanel>
            <Button Style="{StaticResource MaterialDesignFlatButton}" Padding="0" HorizontalAlignment="Right" Margin="4" Click="CloseSetting_Click">
                <materialDesign:PackIcon Kind="Close" Width="30" Height="30"></materialDesign:PackIcon>
            </Button>
            <TextBlock  Style="{DynamicResource MaterialDesignBody1TextBlock}" Margin="8,8,8,16" TextWrapping="WrapWithOverflow"
                       >
                Features:<LineBreak/>
                Support reading epub, pdf book files<LineBreak/>
                Support reading and storing books from the following free online reading websites: <LineBreak/>
                <TabPanel></TabPanel>
                 <Hyperlink Foreground="{DynamicResource PrimaryHueMidBrush}" FontSize="15" NavigateUri="https://truyen.tangthuvien.vn/" RequestNavigate="Hyperlink_RequestNavigate">
                     Tàng Thư Viện
                 </Hyperlink>
                <LineBreak/>continue to update...
            </TextBlock>
            
            
        </StackPanel>
    </Grid>
</UserControl>
